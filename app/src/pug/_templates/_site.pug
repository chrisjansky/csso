      <!-- endinject -->
      <!-- endbuild -->

  body(class="theme--" + theme)

    include ../_mixins/_article

    block template-body
      p Basic template.

    block template-foot
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")

